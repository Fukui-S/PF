<main style="background-color: #f9f7f5;">
  <div class="padding-top: 58px;">
    <div class="container">
      <div class="row">
        <div class="col d-flex justify-content-center">
          <div class="login-signin_box">
            <h2>投稿一覧 </h2>
            <% @posts.each do |post| %>
              <div class="post-item">
                <div class="image-box">
                  <div class="image">
                    <%= link_to post_path(post.id) do %>
                      <%= attachment_image_tag post, :image, :fill, 200, 200, fallback: "noimage.jpg", size:'200x200', class:"mt-3 rounded-circle" %>
                    <% end %>
                  </div>
                </div>
                <div class="title-head">
                  <table>
                    <tr>
                      <td class="title">タイトル</td>
                      <td>
                      <%= link_to post_path(post.id) do %>
                        <%= post.title %>
                      <% end %>
                      </td>
                    </tr>
                    <tr>
                      <td class="title">ユーザー名</td>
                      <td><%=post.user.name %></td>
                    </tr>
                    <tr>
                      <td class="title">コメント数</td>
                      <td><%= post.post_comments.count %></td>
                    </tr>
                  </table>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>

<!--ページング-->
<%= paginate @posts %>