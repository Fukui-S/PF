post/index
<% @posts.each do |post| %>
<div>
  <div>
    <div>
      <%= link_to post_path(post.id) do %>
      <%= attachment_image_tag post, :image %>
      <% end %>
      <p><%#= image_tag('sample-author1.jpg') %></p>
      <p>タイトル<%= post.title %></p>
      <p>ユーザーネーム<%=post.user.name %></p>
      <p>コメント数<%= post.post_comments.count %></p>
    </div>
    <% end %>
  </div>
</div>

<!--ページング-->
<%= paginate @posts %>