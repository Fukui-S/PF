<div class="profile-container">
  <h3 class="profile">
    <%= @user.name %> <br>
    <%= @user.email %>
  </h3>
  <%#= image_tag('sample-author1.jpg') %>
  <% if @user.id == current_user.id %>
   <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
   <% end %>
</div>

<% @post.each do |post| %>
<div>
  <%= link_to post_path(post.id) do %>
  <% end %>
  <p>投稿ユーザー画像：<%#= image_tag('sample-author1.jpg') %></p>
  <p>ユーザー名:<%= post.user.name %></p>
  <p><%= link_to post_path(post)  do %>
  タイトル<%= post.title %></p>
  <% end %>
<% end %>
</div>