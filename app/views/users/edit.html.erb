<main style="background-color: #f9f7f5;">
  <div class="padding-top: 58px;">
    <div class="container">
      <div class="row">
        <div class="col d-flex justify-content-center">
          <div class="login-signin_box">
            <h2>プロフィール編集</h2>
            <%= form_with model:@user, local:true do |f| %>
              <div class="field">
                <%= f.label :名前 %><br />
                  <%= f.text_field :name, autofocus: true %>
              </div>
              <div class="field">
                <%= f.label :メールアドレス%><br />
                  <%= f.text_field :email %>
              </div>
              <div class="actions">
                <%= f.submit "変更を保存" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>